{
  "name": "gram-fiyat",
  "version": "1.0.0",
  "description": "Gram/Fiyat - Kuyumculuk için gram ve fiyat hesaplama uygulaması",
  "main": "electron.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production --base-href ./",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:fiyat-hesaplama": "node dist/fiyat-hesaplama/server/server.mjs",
    "electron": "electron .",
    "electron:build": "npm run build:prod && electron .",
    "electron:pack": "npm run build:prod && npx electron-packager . GramFiyat --platform=darwin --arch=arm64,x64 --icon=src/assets/icon.png --out=release --overwrite",
    "pack": "npm run build:prod && electron-builder --dir",
    "dist": "npm run build:prod && electron-builder",
    "dist:mac": "npm run build:prod && electron-builder --mac",
    "dist:win": "npm run build:prod && electron-builder --win",
    "dist:linux": "npm run build:prod && electron-builder --linux"
  },
  "build": {
    "appId": "com.elizi.gramfiyat",
    "productName": "EliziGramFiyat",
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "package.json",
      "src/assets/**/*",
      "!dist/**/server",
      "!dist/**/server.mjs",
      "!dist/**/*.server.mjs"
    ],
    "mac": {
      "icon": "src/assets/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": "arm64"
        }
      ],
      "category": "public.app-category.business"
    },
    "win": {
      "icon": "src/assets/icon.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.0",
    "@angular/common": "^17.3.0",
    "@angular/compiler": "^17.3.0",
    "@angular/core": "^17.3.0",
    "@angular/forms": "^17.3.0",
    "@angular/platform-browser": "^17.3.0",
    "@angular/platform-browser-dynamic": "^17.3.0",
    "@angular/platform-server": "^17.3.0",
    "@angular/router": "^17.3.0",
    "@angular/ssr": "^17.3.17",
    "express": "^4.18.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.17",
    "@angular/cli": "^17.3.17",
    "@angular/compiler-cli": "^17.3.0",
    "@electron/rebuild": "^4.0.2",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "electron": "27.3.11",
    "electron-builder": "^26.4.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.4.2"
  }
}
